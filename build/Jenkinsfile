pipeline {
    agent any
    environment {
        REGISTRY = "ssh.t3winc.com:5000"
    }
    stages {
        stage('Verify'){
            steps {
                dir('build')
                sh 'chmod +x ./ci/00-verify.sh'
                sh './ci/00-verify.sh'
            }
        }
        stage('Build'){
            steps {
                dir('build')
                sh 'chmod +x ./ci/01-build.sh'
                sh './ci/01-build.sh'
            }
        }
    }
}